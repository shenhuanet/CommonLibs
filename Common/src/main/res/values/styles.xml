<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="CommonBaseTheme" />

    <style name="CommonToolbar">
        <item name="android:id">@id/common_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_toolbar_height</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingTop">@dimen/common_toolbar_padding_top</item>

    </style>

</resources>